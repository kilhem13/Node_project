<!DOCTYPE html>
<html lang="en">
  <head>
      <% include partials/head %>

    <script>
        function getQueryVariable(variable)
    {
       var query = window.location.search.substring(1);
       var vars = query.split("&");
       for (var i=0;i<vars.length;i++) {
               var pair = vars[i].split("=");
               if(pair[0] == variable){return pair[1];}
       }
       return(false);
    }
        console.log(getQueryVariable('error'))
        if(getQueryVariable('error') == 1)
            alert('Passwords must be equals')

    </script>
  </head>
  <body class="container">
    <div class="col-md-6 col-md-offset-3">
      <h1>Hello <%= user.username %></h1>
    
      <form action="/modify_account" method="post">
        <div class="form-group">
          <label for="form_email">New email</label>
          <input id="form_email" type="text" name="email" />
        </div>
        <div class="form-group">
          <label for="form_password">New password</label>
          <input id="form_password" type="password" name="password"/>
          <label for="rep_form_password">Repeate new password</label>
          <input id="rep_form_password" type="password" name="rep_password"/>
        </div>
        <button class="btn btn-primary btn-block" type="submit" value="Submit">Modify</button>
      </form>

      <button class="btn btn-danger" href="/delete_account" onClick='document.location.href="/delete_account"'>
        Delete my account
      </button>
      <button class="btn btn-danger" href="/" onClick='document.location.href="/"'>
        Back
      </button>
    </div>

  </body>
</html>
